<!-- rule.mdを読むこと -->
<Window
    x:Class="nanobananaWindows.Views.Settings.SceneBuilderSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- メインコンテンツ -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="24,16,24,16">
            <StackPanel Spacing="16" MinWidth="850">
                <!-- シーンタイプ選択 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="シーンタイプ" FontWeight="SemiBold"/>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <RadioButton x:Name="StorySceneRadio" Content="ストーリーシーン"
                                         GroupName="SceneType" IsChecked="True"
                                         Checked="SceneTypeRadio_Checked"/>
                            <RadioButton x:Name="BattleSceneRadio" Content="バトルシーン"
                                         GroupName="SceneType" IsEnabled="False"
                                         Checked="SceneTypeRadio_Checked"/>
                            <RadioButton x:Name="BossRaidRadio" Content="ボスレイド"
                                         GroupName="SceneType" IsEnabled="False"
                                         Checked="SceneTypeRadio_Checked"/>
                        </StackPanel>
                        <TextBlock Text="※ バトルシーン・ボスレイドは後日実装予定"
                                   FontSize="11" Foreground="Orange"/>
                    </StackPanel>
                </Border>

                <!-- 背景設定 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="背景設定" FontWeight="SemiBold"/>

                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <RadioButton x:Name="BackgroundFileRadio" Content="ファイル指定"
                                         GroupName="BackgroundSource" IsChecked="True"
                                         Checked="BackgroundSourceRadio_Checked"/>
                            <RadioButton x:Name="BackgroundPromptRadio" Content="情景説明で生成"
                                         GroupName="BackgroundSource"
                                         Checked="BackgroundSourceRadio_Checked"/>
                        </StackPanel>

                        <!-- ファイル指定時 -->
                        <StackPanel x:Name="BackgroundFilePanel" Spacing="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="背景画像:" FontSize="12"/>
                                <TextBlock Text=" *" Foreground="Red" FontSize="12"/>
                            </StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="BackgroundImagePathTextBox"
                                         PlaceholderText="画像をドロップ、またはパスを入力..."
                                         AllowDrop="True"
                                         DragOver="ImagePathTextBox_DragOver"
                                         Drop="BackgroundImagePathTextBox_Drop"
                                         TextChanged="BackgroundImagePathTextBox_TextChanged"
                                         Grid.Column="0"/>
                                <Button x:Name="BrowseBackgroundButton"
                                        Content="参照..."
                                        Click="BrowseBackgroundButton_Click"
                                        Margin="8,0,0,0"
                                        Grid.Column="1"/>
                            </Grid>
                        </StackPanel>

                        <!-- 情景説明時 -->
                        <StackPanel x:Name="BackgroundPromptPanel" Spacing="4" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="背景の情景説明:" FontSize="12"/>
                                <TextBlock Text=" *" Foreground="Red" FontSize="12"/>
                            </StackPanel>
                            <TextBox x:Name="BackgroundDescriptionTextBox"
                                     PlaceholderText="例：夕焼けの海辺、学校の屋上..."
                                     TextWrapping="Wrap" AcceptsReturn="True" Height="60"
                                     TextChanged="BackgroundDescriptionTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- ストーリーシーン用追加設定 -->
                        <StackPanel x:Name="StoryBackgroundOptionsPanel" Spacing="8" Margin="0,8,0,0">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ぼかし:" VerticalAlignment="Center"/>
                                    <Slider x:Name="BlurAmountSlider" Width="100"
                                            Minimum="0" Maximum="30" Value="10"
                                            ValueChanged="BlurAmountSlider_ValueChanged"/>
                                    <TextBlock x:Name="BlurAmountText" Text="10" Width="25"
                                               VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="雰囲気:" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="LightingMoodComboBox" Width="120"
                                              SelectionChanged="LightingMoodComboBox_SelectionChanged"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel x:Name="CustomMoodPanel" Spacing="4" Visibility="Collapsed">
                                <TextBlock Text="カスタム雰囲気:" FontSize="12"/>
                                <TextBox x:Name="CustomMoodTextBox"
                                         PlaceholderText="例：雨上がりの虹、満月の夜..."
                                         TextChanged="CustomMoodTextBox_TextChanged"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 配置設定（ストーリーシーン用） -->
                <Border x:Name="StoryLayoutPanel"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="配置設定" FontWeight="SemiBold"/>

                        <StackPanel Orientation="Horizontal" Spacing="24">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="配置パターン:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="StoryLayoutComboBox" Width="150"
                                          SelectionChanged="StoryLayoutComboBox_SelectionChanged"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="距離感:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="StoryDistanceComboBox" Width="100"
                                          SelectionChanged="StoryDistanceComboBox_SelectionChanged"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel x:Name="CustomLayoutPanel" Spacing="4" Visibility="Collapsed">
                            <TextBlock Text="カスタム配置説明:" FontSize="12"/>
                            <TextBox x:Name="CustomLayoutTextBox"
                                     PlaceholderText="例：主人公が階段の上、ヒロインが階段下..."
                                     TextChanged="CustomLayoutTextBox_TextChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- キャラクター配置（ストーリーシーン用） -->
                <Border x:Name="StoryCharacterPanel"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4" Padding="12">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBlock Text="キャラクター配置" FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="人数:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="CharacterCountComboBox" Width="80"
                                          SelectionChanged="CharacterCountComboBox_SelectionChanged"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- キャラクター1～5（動的に表示/非表示） -->
                        <StackPanel x:Name="CharactersPanel" Spacing="8">
                            <!-- 各キャラクター行はコードで動的生成 -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- ダイアログ設定（ストーリーシーン用） -->
                <Border x:Name="StoryDialogPanel"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ダイアログ設定" FontWeight="SemiBold"/>

                        <!-- ナレーション -->
                        <StackPanel Spacing="4">
                            <StackPanel Orientation="Horizontal" Spacing="16">
                                <TextBlock Text="ナレーション:" VerticalAlignment="Center"/>
                                <ComboBox x:Name="NarrationPositionComboBox" Width="140"
                                          SelectionChanged="NarrationPositionComboBox_SelectionChanged"/>
                            </StackPanel>
                            <TextBox x:Name="NarrationTextBox"
                                     PlaceholderText="ナレーションテキスト（空欄可）"
                                     TextWrapping="Wrap" Height="40"
                                     TextChanged="NarrationTextBox_TextChanged"/>
                        </StackPanel>

                        <!-- 各キャラクターのセリフ -->
                        <StackPanel x:Name="DialoguesPanel" Spacing="4" Margin="0,8,0,0">
                            <!-- コードで動的生成 -->
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- 装飾テキストオーバーレイ -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="4" Padding="12">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="16">
                            <TextBlock Text="装飾テキストオーバーレイ" FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <Button x:Name="TextOverlayAddButton" Content="＋ 追加"
                                    Click="TextOverlayAddButton_Click"/>
                            <Button x:Name="TextOverlayRemoveButton" Content="－ 削除"
                                    Click="TextOverlayRemoveButton_Click"/>
                            <TextBlock x:Name="TextOverlayCountText" Text="0 / 10"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                        <TextBlock Text="位置は自由入力（例: Top Center, Bottom Right, Near Character 1）"
                                   FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                        <!-- 装飾テキストアイテムリスト -->
                        <StackPanel x:Name="TextOverlayItemsPanel" Spacing="4">
                            <!-- プレースホルダー -->
                            <TextBlock x:Name="TextOverlayPlaceholderText"
                                       Text="「＋ 追加」ボタンで装飾テキストを追加"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,20,0,20"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ボタンエリア -->
        <Border Grid.Row="1"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="0,1,0,0"
                Padding="24,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button x:Name="ApplyButton" Content="適用" Style="{StaticResource AccentButtonStyle}"
                        Click="ApplyButton_Click" Width="100"/>
                <Button x:Name="CancelButton" Content="キャンセル"
                        Click="CancelButton_Click" Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
