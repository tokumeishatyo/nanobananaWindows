<ContentDialog
    x:Class="nanobananaWindows.Views.Settings.TextOverlayPlacementDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="装飾テキスト配置"
    PrimaryButtonText="OK"
    SecondaryButtonText="キャンセル"
    DefaultButton="Primary"
    MinWidth="700"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel Spacing="12" MinWidth="650">
        <!-- ヘッダー説明 -->
        <TextBlock Text="位置は自由入力（例: Top Center, Bottom Right, Near Character 1）"
                   FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

        <!-- 追加/削除ボタン -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button x:Name="AddButton" Content="＋ 追加" Click="AddButton_Click"/>
            <Button x:Name="RemoveButton" Content="－ 削除" Click="RemoveButton_Click"/>
            <TextBlock x:Name="CountText" Text="0 / 10"
                       VerticalAlignment="Center" Margin="12,0,0,0"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- アイテムリスト -->
        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ItemsPanel" Spacing="8">
                <!-- プレースホルダー（アイテムがない場合） -->
                <TextBlock x:Name="PlaceholderText"
                           Text="「＋ 追加」ボタンで装飾テキストを追加"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,40,0,40"/>
            </StackPanel>
        </ScrollViewer>
    </StackPanel>
</ContentDialog>
