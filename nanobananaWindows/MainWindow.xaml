<?xml version="1.0" encoding="utf-8"?>
<!-- rule.mdを読むこと -->
<Window
    x:Class="nanobananaWindows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:nanobananaWindows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="AI創作工房 - nanobanana Windows">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <!-- 3カラムレイアウト -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="500"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="700"/>
        </Grid.ColumnDefinitions>

        <!-- 左カラム: 基本設定 -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel Spacing="12">

                <!-- 出力タイプ選択 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="出力タイプ" FontWeight="SemiBold" FontSize="14"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="タイプ:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,8,0"/>
                            <ComboBox x:Name="OutputTypeComboBox" Grid.Column="1"
                                      HorizontalAlignment="Stretch" Margin="0,0,8,0"
                                      SelectionChanged="OutputTypeComboBox_SelectionChanged"/>
                            <Button x:Name="SettingsButton" Content="詳細設定..." Grid.Column="2"
                                    Click="SettingsButton_Click"/>
                        </Grid>

                        <TextBlock x:Name="SettingsStatusText" Text="現在の設定: 顔三面図"
                                   FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Border>

                <!-- スタイル設定 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="スタイル設定" FontWeight="SemiBold" FontSize="14"/>

                        <!-- カラーモード -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="カラーモード:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="ColorModeComboBox" Grid.Column="1" HorizontalAlignment="Stretch"
                                      SelectionChanged="ColorModeComboBox_SelectionChanged"/>
                        </Grid>

                        <!-- スタイル -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="スタイル:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="OutputStyleComboBox" Grid.Column="1" HorizontalAlignment="Stretch"
                                      SelectionChanged="OutputStyleComboBox_SelectionChanged"/>
                        </Grid>

                        <!-- アスペクト比 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="アスペクト比:" VerticalAlignment="Center"/>
                            <ComboBox x:Name="AspectRatioComboBox" Grid.Column="1" HorizontalAlignment="Stretch"
                                      SelectionChanged="AspectRatioComboBox_SelectionChanged"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 基本情報 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="基本情報" FontWeight="SemiBold" FontSize="14"/>

                        <!-- タイトル -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="タイトル:" VerticalAlignment="Center"/>
                            <TextBox x:Name="TitleTextBox" Grid.Column="1" PlaceholderText="作品タイトル（必須）"
                                     TextChanged="TitleTextBox_TextChanged" Margin="0,0,8,0"/>
                            <CheckBox x:Name="IncludeTitleCheckBox" Content="画像に入れる" Grid.Column="2"
                                      Checked="IncludeTitleCheckBox_Changed" Unchecked="IncludeTitleCheckBox_Changed"/>
                        </Grid>

                        <!-- 作者名 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="作者名:" VerticalAlignment="Center"/>
                            <TextBox x:Name="AuthorNameTextBox" Grid.Column="1" PlaceholderText="Unknown"
                                     TextChanged="AuthorNameTextBox_TextChanged"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- 生成ボタン・リセットボタン -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="12">
                    <StackPanel Spacing="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="GenerateYamlButton" Content="YAML生成"
                                    HorizontalAlignment="Stretch" Margin="0,0,4,0"
                                    Style="{ThemeResource AccentButtonStyle}"
                                    Click="GenerateYamlButton_Click"/>
                            <Button x:Name="ResetButton" Content="リセット" Grid.Column="1"
                                    HorizontalAlignment="Stretch" Margin="4,0,0,0"
                                    Click="ResetButton_Click"/>
                        </Grid>

                        <Button x:Name="MangaComposerButton" Content="漫画ページコンポーザー"
                                HorizontalAlignment="Stretch"
                                Click="MangaComposerButton_Click"/>

                        <Button x:Name="ImageToolButton" Content="画像ツール（背景透過）"
                                HorizontalAlignment="Stretch"
                                Click="ImageToolButton_Click"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- 左右カラム間の区切り線 -->
        <Border Grid.Column="1" Width="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,10"/>

        <!-- 中央カラム: API設定 -->
        <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel Spacing="12">

                <!-- API設定 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="API設定" FontWeight="SemiBold" FontSize="14"/>

                        <!-- 出力モード -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="出力モード:" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <RadioButton x:Name="YamlModeRadio" Content="YAML出力" GroupName="OutputMode"
                                             IsChecked="True" Checked="OutputModeRadio_Checked"/>
                                <RadioButton x:Name="ApiModeRadio" Content="画像出力(API)" GroupName="OutputMode"
                                             Margin="12,0,0,0" Checked="OutputModeRadio_Checked"/>
                            </StackPanel>
                        </Grid>

                        <!-- APIキー -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="API Key:" VerticalAlignment="Center"/>
                            <PasswordBox x:Name="ApiKeyBox" Grid.Column="1" PlaceholderText="Google AI API Key"
                                         PasswordChanged="ApiKeyBox_PasswordChanged" Margin="0,0,8,0"
                                         IsEnabled="False"/>
                            <Button x:Name="ClearApiKeyButton" Grid.Column="2" Content="✕"
                                    Click="ClearApiKeyButton_Click" IsEnabled="False"
                                    ToolTipService.ToolTip="APIキーをクリア"/>
                        </Grid>

                        <!-- APIモード -->
                        <Grid x:Name="ApiSubModeGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="APIモード:" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <RadioButton x:Name="NormalModeRadio" Content="通常" GroupName="ApiSubMode"
                                             IsChecked="True" IsEnabled="False" Checked="ApiSubModeRadio_Checked"/>
                                <RadioButton x:Name="RedrawModeRadio" Content="参考画像清書" GroupName="ApiSubMode"
                                             Margin="8,0,0,0" IsEnabled="False" Checked="ApiSubModeRadio_Checked"/>
                                <RadioButton x:Name="SimpleModeRadio" Content="シンプル" GroupName="ApiSubMode"
                                             Margin="8,0,0,0" IsEnabled="False" Checked="ApiSubModeRadio_Checked"/>
                            </StackPanel>
                        </Grid>

                        <!-- 参考画像 -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="参考画像:" VerticalAlignment="Center"/>
                            <TextBox x:Name="ReferenceImagePathBox" Grid.Column="1" PlaceholderText="下書き画像"
                                     IsEnabled="False" Margin="0,0,8,0"/>
                            <Button x:Name="BrowseReferenceButton" Grid.Column="2" Content="参照"
                                    Click="BrowseReferenceButton_Click" IsEnabled="False"/>
                        </Grid>

                        <!-- 追加指示（清書モード時のみ表示） -->
                        <StackPanel x:Name="RedrawInstructionPanel" Visibility="Collapsed" Spacing="4">
                            <TextBlock Text="追加指示:"/>
                            <TextBox x:Name="RedrawInstructionBox" AcceptsReturn="True" TextWrapping="Wrap"
                                     Height="60" IsEnabled="False"/>
                        </StackPanel>

                        <!-- プロンプト（シンプルモード時のみ表示） -->
                        <StackPanel x:Name="SimplePromptPanel" Visibility="Collapsed" Spacing="4">
                            <TextBlock Text="プロンプト:"/>
                            <TextBox x:Name="SimplePromptBox" AcceptsReturn="True" TextWrapping="Wrap"
                                     Height="80" IsEnabled="False"/>
                        </StackPanel>

                        <!-- 解像度 -->
                        <Grid x:Name="ResolutionGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="解像度:" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Grid.Column="1">
                                <RadioButton x:Name="Res1KRadio" Content="1K" GroupName="Resolution" IsEnabled="False"/>
                                <RadioButton x:Name="Res2KRadio" Content="2K" GroupName="Resolution"
                                             IsChecked="True" Margin="12,0,0,0" IsEnabled="False"/>
                                <RadioButton x:Name="Res4KRadio" Content="4K" GroupName="Resolution"
                                             Margin="12,0,0,0" IsEnabled="False"/>
                            </StackPanel>
                        </Grid>

                        <!-- 画像生成ボタン -->
                        <Button x:Name="GenerateImageButton" Content="画像生成（API）"
                                HorizontalAlignment="Stretch" Margin="0,8,0,0"
                                Style="{ThemeResource AccentButtonStyle}"
                                Click="GenerateImageButton_Click" IsEnabled="False"/>
                    </StackPanel>
                </Border>

                <!-- 参考画像プレビュー -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="12">
                    <StackPanel Spacing="8">
                        <TextBlock Text="参考画像プレビュー" FontWeight="SemiBold" FontSize="14"
                                   HorizontalAlignment="Center"/>
                        <Border Background="{ThemeResource ControlFillColorDefaultBrush}"
                                CornerRadius="4" MinHeight="100" Padding="8">
                            <TextBlock x:Name="ReferenceImagePlaceholder" Text="画像未読込"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            <!-- TODO: 実際の画像表示用のImage要素を追加 -->
                        </Border>
                    </StackPanel>
                </Border>

                <!-- API使用状況 -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8" Padding="12">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock x:Name="UsageStatusText" Text="本日: 0回 / 今月: 0回"
                                   FontSize="12" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>
                        <TextBlock Text="クリックで詳細表示" FontSize="10"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- 中右カラム間の区切り線 -->
        <Border Grid.Column="3" Width="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}" Margin="0,10"/>

        <!-- 右カラム: YAMLプレビュー・画像プレビュー -->
        <Grid Grid.Column="4" Padding="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- YAMLプレビュー -->
            <Border Grid.Row="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="12" Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ヘッダー -->
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="YAMLプレビュー" FontWeight="SemiBold" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                            <Button x:Name="CopyYamlButton" Content="コピー" Click="CopyYamlButton_Click"/>
                            <Button x:Name="SaveYamlButton" Content="保存" Click="SaveYamlButton_Click"/>
                            <Button x:Name="LoadYamlButton" Content="読込" Click="LoadYamlButton_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- YAMLテキスト -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Background="{ThemeResource ControlFillColorDefaultBrush}"
                                  CornerRadius="4" MaxHeight="200">
                        <TextBlock x:Name="YamlPreviewText" Text="YAML生成後に表示されます"
                                   FontFamily="Consolas" FontSize="12" Padding="8"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap" IsTextSelectionEnabled="True"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 画像プレビュー -->
            <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="画像プレビュー" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>

                    <!-- 画像表示エリア -->
                    <Border Grid.Row="1" Background="{ThemeResource ControlFillColorDefaultBrush}"
                            CornerRadius="4">
                        <TextBlock x:Name="ImagePreviewPlaceholder" Text="画像生成後に表示されます"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <!-- TODO: 実際の画像表示用のImage要素を追加 -->
                    </Border>

                    <!-- ボタン -->
                    <Grid Grid.Row="2" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="SaveImageButton" Content="画像を保存" Grid.Column="0"
                                HorizontalAlignment="Stretch" Margin="0,0,4,0"
                                Click="SaveImageButton_Click" IsEnabled="False"/>
                        <Button x:Name="RefineImageButton" Content="画像を加工" Grid.Column="1"
                                HorizontalAlignment="Stretch" Margin="4,0,0,0"
                                Click="RefineImageButton_Click" IsEnabled="False"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
